{
    "_comment": "DOMESTIC Invoice Validation - Monthly Configuration Template",
    "_instructions": "Copy this file and fill in the values for your target month",
    "_example": "For October 2025, set month='202510', month_name='Oct', year='2025'",
    
    "metadata": {
        "month": "YYYYMM",
        "month_name": "Month_Short",
        "year": "YYYY",
        "created_date": "YYYY-MM-DD",
        "created_by": "User/System"
    },
    
    "paths": {
        "invoice_excel": "Data/DSV {YYYYMM}/SCNT HVDC DRAFT INVOICE FOR DOMESTIC DELIVERY {MONTH_FULL} {YYYY}.xlsx",
        "dn_pdf_folder": "Data/DSV {YYYYMM}/SCNT Domestic ({Month} {YYYY}) - Supporting Documents/",
        "lanemap_json": "ApprovedLaneMap_ENHANCED.json",
        "output_folder": "Results/{Month}_{YYYY}/",
        "reports_folder": "Results/{Month}_{YYYY}/Reports/",
        "logs_folder": "Results/{Month}_{YYYY}/Logs/"
    },
    
    "output_patterns": {
        "final_excel": "domestic_{month_lower}_{year}_FINAL_WITH_PDF_VALIDATION_{timestamp}.xlsx",
        "validation_report": "{MONTH_UPPER}_{YYYY}_COMPLETE_VALIDATION_REPORT.md",
        "dn_supply_demand": "dn_supply_demand_{month}.csv",
        "dn_candidate_dump": "dn_candidate_dump_{month}.csv"
    },
    
    "parameters": {
        "dn_auto_capacity_bump": true,
        "dn_max_capacity": 16,
        "dn_capacity_default": 1,
        "dn_use_pdf_fields_first": true,
        "dn_origin_threshold": 0.27,
        "dn_dest_threshold": 0.50,
        "dn_vehicle_threshold": 0.30,
        "dn_min_score": 0.40,
        "dn_dump_topn": 3,
        "dn_dump_supply": true
    },
    
    "hybrid_integration": {
        "enabled": true,
        "log_level": "INFO",
        "ade_daily_budget": 50.0,
        "fallback_to_legacy": true
    },
    
    "validation": {
        "expected_dn_count_min": 30,
        "expected_dn_count_max": 50,
        "expected_invoice_items_min": 35,
        "expected_invoice_items_max": 55,
        "target_match_rate": 0.90,
        "target_fail_rate_max": 0.05
    }
}

