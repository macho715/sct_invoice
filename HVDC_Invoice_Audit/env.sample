# ==================== App Configuration ====================
APP_ENV=dev
APP_PORT=8080
LOG_LEVEL=INFO

# ==================== Broker & Backend ====================
# Redis (WSL2 권장): sudo apt install redis-server → redis-cli ping (PONG)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# RabbitMQ (WSL2 불가 시 대안, Erlang 필요)
# CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
# CELERY_RESULT_BACKEND=rpc://

# ==================== Hybrid Doc System ====================
# ADE (LandingAI) API Configuration (선택적)
ADE_API_KEY=your_landing_ai_api_key_here
ADE_ENDPOINT=https://api.landing.ai

# Routing & Schema Paths
ROUTING_RULES_PATH=./hybrid_doc_system/config/routing_rules_hvdc.json
IR_SCHEMA_PATH=./hybrid_doc_system/config/unified_ir_schema.yaml

# Processing Configuration
DOCLING_WORKERS=2
DAILY_ADE_BUDGET_USD=100.0

# ==================== HVDC Audit Configuration ====================
# Feature Flags
USE_HYBRID=true

# Hybrid API URL
HYBRID_API_URL=http://localhost:8080

# Rate Configuration Path
RATE_CONFIG_PATH=./Rate

# ==================== Performance Tuning ====================
# Celery Configuration
CELERY_TASK_TIMEOUT=300
CELERY_MAX_RETRIES=3
CELERY_RETRY_DELAY=60

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600

# ==================== Development ====================
# Debug Mode
DEBUG=false

# Auto-reload (FastAPI)
RELOAD=true

